{
    "name": "guillaumesmo/rector-simple",
    "type": "project",
    "require": {
        "rector/rector": "0.10.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "symplify/rule-doc-generator": "^9.2"
    },
    "scripts": {
        "generate": [
            "rm -fr sets/*.php",
            "vendor/bin/rule-doc-generator generate vendor/rector/rector/packages vendor/rector/rector/rules --output-file rector_rules.md",
            "cat rector_rules.md | grep -- '^- class' | sed 's/.*`\\(.*\\)`.*/\\1/' | php generate.php",
            "rm -f rector_rules.md"
        ]
    }
}
